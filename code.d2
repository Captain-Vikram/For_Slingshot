title Production Game AI Architecture 2026 - End-to-End
direction right

// LAYER 1
Infrastructure [label: "Infrastructure & Orchestration", color: "#e0e0e0"] {
  Frontend [label: "Frontend\n(React)"]
  Backend [label: "Backend Server\n(FastAPI)", color: "#ffcccc"]
  Cache [label: "Cache\n(Redis)", shape: cylinder]
}

// LAYER 2
DataOpsPipeline [label: "Data Ops Pipeline", color: "#e8e0f0"] {
  DataSource [label: "Data Source\n(Any unlabeled data)"]
  Collect [label: "Collect"]
  Label [label: "Label\n(Parallel subagents in git worktrees)"]
  AugmentTrainEval [label: "Augment\nTrain YOLO Model\nEval", shape: note]
  MeetsTarget [label: "Meets Target?", shape: diamond]
  Complete [label: "Complete\n(YOLO Model)", shape: cylinder]
}

// LAYER 3
RAGEngine [label: "RAG Knowledge Base", color: "#d0f0e8"] {
  Sources [label: "Sources"] {
    Manuals [label: "Manuals"]
    Logs [label: "Logs"]
    WebSearch [label: "Game Footage"]
    InternetScrape [label: "Internet Scrape\n(Web code examples)"]
  }

  ProcessingAndRetrieval [label: "Processing & Retrieval"] {
    ChunkAndEmbed [label: "Chunker & Embedder\n(Splits text and generates vectors)"]
    VectorStore [label: "ChromaDB\n(local)", shape: cylinder, color: "#b3e6cc"]
    HybridSearch [label: "Hybrid Search"]
    Reranker [label: "Cross-Encoder"]
  }
}

// LAYER 4: The Intelligence Core
AgentSwarm [label: "Agent Swarm\n(Multi-Agent Ecosystem)", color: "#ffd6d6", shape: folder] {

  // Step 1: The Filter
  ContextManager [label: "Context Window\n(Token Budgeting & Intake)", shape: invhouse, color: "#ffb3b3"]
  
  // Step 2: The Brain
  CodingEngine [label: "Coding Engine\n(Qwen Code + nanoClaw)", shape: hexagon, color: "#ff9999"]
  
  // Step 3: The Hardware Switch
  EnvironmentRouter [label: "Deployment Router\n(Workload Evaluator)", shape: diamond, color: "#ffcc99"]

  // Step 4: The Muscle
  ComputeEnclaves [label: "Hardware Acceleration Zones", style: dashed, color: "#e0e0e0"] {
    LocalCompute [label: "Private Edge Compute\n(AMD GAIA SDK + Ryzen AI)\n'Zero-Leak Local Execution'", shape: box3d, color: "#cce5ff"]
    CloudCompute [label: "Enterprise Cloud Compute\n(AMD EPYC + MI300X + ROCm)\n'Heavy Multi-Tenant Lifting'", shape: box3d, color: "#d9b3ff"]
  }
}

// SWARM INTERNAL CONNECTIONS
ContextManager > CodingEngine: "Optimized Context Payload"
CodingEngine > EnvironmentRouter: "Execution Request"
EnvironmentRouter > LocalCompute: "Route: Local/Private App"
EnvironmentRouter > CloudCompute: "Route: Cloud/SaaS Backend"

// LAYER 5
ExecutionEnvironment [label: "Execution Environment", color: "#ccd9ff"] {
  BotRunner [label: "Bot Runner\n(Hardware or Software Use Case)"]
}

// CONNECTIONS
// Use > instead of -> 
Frontend > Backend: "API Calls"
Backend > Cache: "Caching"
Backend > DataSource: "Triggers Ingest"

DataSource > Collect
Collect > Label
Label > AugmentTrainEval
AugmentTrainEval > MeetsTarget
MeetsTarget > Label: "No"
MeetsTarget > Complete: "Yes"

Complete > Sources: "Model Metadata"
Sources > ChunkAndEmbed
ChunkAndEmbed > VectorStore
VectorStore > HybridSearch
HybridSearch > Reranker
Reranker > ContextManager: "Candidate Context"
ContextManager > CodingEngine

Complete > BotRunner: "YOLO Model"
CodingEngine > BotRunner: "Bot Script"